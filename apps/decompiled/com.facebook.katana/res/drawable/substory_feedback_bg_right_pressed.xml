<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list android:shape="rectangle">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/feed_substory_feedback_border_color" />
                    <corners android:topRightRadius="@dimen/two_dp" android:bottomRightRadius="@dimen/two_dp" />
                </shape>
            </item>
            <item android:top="@dimen/feed_substory_feedback_border_width" android:right="@dimen/feed_substory_feedback_border_width" android:bottom="@dimen/feed_substory_feedback_border_width">
                <shape android:shape="rectangle">
                    <solid android:color="@color/feed_feedback_background_pressed_color" />
                    <corners android:topRightRadius="@dimen/two_dp" android:bottomRightRadius="@dimen/two_dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>