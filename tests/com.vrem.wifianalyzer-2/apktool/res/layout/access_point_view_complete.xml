<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/tab" android:visibility="gone" android:layout_width="@dimen/list_view_item_horizontal_tab" android:layout_height="wrap_content" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/groupIndicator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@null" />
            <ImageView android:id="@id/configuredImage" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" android:src="@drawable/ic_tag_faces_black_18dp" android:contentDescription="@null" />
            <TextView android:textStyle="bold" android:id="@id/ssid" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer">
                <TextView android:id="@id/level" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <ImageView android:layout_gravity="center" android:id="@id/levelImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@null" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:textStyle="bold" android:textColor="@color/channel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" android:text="@string/channel_short_name" />
                    <TextView android:textStyle="bold" android:textColor="@color/channel_number" android:id="@id/channel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" />
                    <TextView android:textColor="@color/channel" android:id="@id/primaryFrequency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" />
                    <TextView android:textStyle="bold" android:textColor="@color/distance" android:id="@id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/channel" android:id="@id/channel_frequency_range" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" />
                    <TextView android:textColor="@color/channel" android:id="@id/width" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" />
                    <TextView android:id="@id/vendorShort" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@id/securityImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/list_view_item_horizontal_spacer" android:contentDescription="@null" />
                    <TextView android:textStyle="italic" android:textColor="@color/security" android:id="@id/capabilities" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>